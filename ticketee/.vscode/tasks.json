{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Rspec file",
      "type": "shell",
      "command": "bundle",
      "args": ["exec", "rspec", "${relativeFile}"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "clear": true,
        "panel": "dedicated"
      }
    },
    {
      "label": "Run Rspec case",
      "type": "shell",
      "command": "bundle",
      "args": ["exec", "rspec", "${relativeFile}:${lineNumber}"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "clear": true,
        "panel": "dedicated"
      }
    }
  ]
}
